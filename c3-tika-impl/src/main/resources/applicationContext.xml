<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-2.5.xsd">

        <bean id="tikaProvider" class="org.aphreet.c3.search.tika.impl.TikaProviderImpl"/>

        <bean id="tikaControl" class="org.aphreet.c3.search.tika.impl.TikaControlImpl"/>

        <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
            <property name="serviceName" value="TikaProvider"/>
            <property name="service" ref="tikaProvider"/>
            <property name="serviceInterface" value="org.aphreet.c3.search.tika.TikaProvider"/>
            <property name="registryPort" value="1399"/>
        </bean>

        <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
            <property name="serviceName" value="TikaControl"/>
            <property name="service" ref="tikaControl"/>
            <property name="serviceInterface" value="org.aphreet.c3.search.tika.TikaControl"/>
            <property name="registryPort" value="1399"/>
        </bean>
</beans>