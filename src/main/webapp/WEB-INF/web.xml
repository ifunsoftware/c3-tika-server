<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>WebDAV-Servlet</display-name>
    <description>
        a servlet that brings easy WebDAV access to any store, only 1 interface needs to be implemented
    </description>

    <servlet>
        <servlet-name>tika</servlet-name>
        <servlet-class>
            org.aphreet.c3.search.tika.TikaServlet
        </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>tika</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>